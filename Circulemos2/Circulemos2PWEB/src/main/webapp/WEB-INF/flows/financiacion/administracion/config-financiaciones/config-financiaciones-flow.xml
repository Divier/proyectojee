<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">

	<var name="configuracionFinanciacionHolderFL"
		class="co.com.datatools.c2.managed_bean.financiacion.configuracion.ConfiguracionFinanciacionHolderFL" />

	<view-state id="ingresar"
		view="/WEB-INF/jsp/financiacion/administracion/configuracionFinanciacion/consultaConfiguracionesFinanciaciones.xhtml">
		<transition on="_op-EDITAR" to="go_to_EDITAR" />
		<transition on="_op-CREAR" to="go_to_CREAR" />
		<transition on="_op-ELIMINAR" to="_op-ELIMINAR" />
		<transition on="_op-CONSULTAR" to="_op-CONSULTAR" />
	</view-state>

	<action-state id="_op-CONSULTAR">
		<evaluate
			expression="externalContext.sessionMap.configuracionFinanciacionMB.consultarConfiguracionFinanciacion()" />
		<transition on="success" to="ingresar" />
	</action-state>

	<action-state id="go_to_CREAR">
		<evaluate
			expression="externalContext.sessionMap.configuracionFinanciacionMB.irRegistrarConfFinanciacion()" />
		<transition on="yes" to="_op-CREAR" />
		<transition on="no" to="ingresar" />
	</action-state>

	<action-state id="go_to_EDITAR">
		<evaluate
			expression="externalContext.sessionMap.configuracionFinanciacionMB.irActualizarConfFinanciacion()" />
		<transition on="yes" to="_op-EDITAR"></transition>
		<transition on="no" to="ingresar"></transition>
	</action-state>

	<view-state id="_op-CREAR"
		view="/WEB-INF/jsp/financiacion/administracion/configuracionFinanciacion/registrarConfiguracionFinanciacion.xhtml">
		<transition on="CONTINUAR" to="registrar"></transition>
		<transition on="LIMPIAR" to="_op-CREAR">
			<evaluate
				expression="externalContext.sessionMap.configuracionFinanciacionMB.cargarFormulario()" />
		</transition>
		<transition on="VOLVER" to="ingresar"></transition>
	</view-state>

	<action-state id="registrar">
		<evaluate
			expression="externalContext.sessionMap.configuracionFinanciacionMB.guardarConfiguracionFinanciacion()" />
		<transition on="yes" to="ingresar">
			<evaluate																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																			
				expression="externalContext.sessionMap.configuracionFinanciacionMB.consultarConfiguracionFinanciacion()" />
		</transition>
		<transition on="no" to="_op-CREAR">
		</transition>
	</action-state>

	<view-state id="_op-EDITAR"
		view="/WEB-INF/jsp/financiacion/administracion/configuracionFinanciacion/actualizarConfiguracionFinanciacion.xhtml">
		<transition on="CONTINUAR" to="actualizar"></transition>
		<transition on="VOLVER" to="ingresar"></transition>
	</view-state>

	<action-state id="actualizar">
		<evaluate																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																			
			expression="externalContext.sessionMap.configuracionFinanciacionMB.actualizarConfiguracionFinanciacion()" />
		<transition on="yes" to="ingresar">
			<evaluate																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																																			
				expression="externalContext.sessionMap.configuracionFinanciacionMB.consultarConfiguracionFinanciacion()" />
		</transition>
		<transition on="no" to="_op-EDITAR">
		</transition>
	</action-state>

	<action-state id="_op-ELIMINAR">
		<evaluate
			expression="externalContext.sessionMap.configuracionFinanciacionMB.eliminarConfFinanciacion()" />
		<transition on="success" to="ingresar"></transition>
	</action-state>

</flow>